<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Novedad</h4>
        </div>
        <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{novedad.id}}" name="id">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Titulo" name="titulo" 
                value="{{novedad.titulo}}"
                >
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo">
                    {{novedad.subtitulo}}
                </textarea>
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo">
                    {{novedad.cuerpo}}
                </textarea>
            </div>
            <div class="form-group">
                <p>
                    <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" name="img_delete" id="img_delete" value="1">
                        Eliminar la imagen actual?
                    </label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                </p>
            </div>
            <button type="submit" class="btn btn-primary">Modificar</button>
        </form>
    </div>
</div>

{{#if error}}
<h5 style="color: red;">{{message}}</h5>
{{/if}}